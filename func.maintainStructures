                            if (curRoom.memory.plan.planQueue[i].structureType == 1) {
                                queueBuild(curRoom.memory.plan.planQueue[i].x, curRoom.memory.plan.planQueue[i].y, STRUCTURE_EXTENSION);
                                curRoom.memory.plan.planQueue.splice(i, 1);
